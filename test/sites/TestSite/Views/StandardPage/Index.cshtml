@using EPiServer.Web.Mvc.Html
@using TestSite.Models
@model TestSite.Models.StandardPage

<!DOCTYPE html>
<html lang="@(Model.Language)">
<body>
<h1>@Html.PropertyFor(x => x.Name)</h1>
@if (Model.ShowBreadcrumbs)
{
    <span id="@StandardPage.PageNameFromGetChildrenCallNodeName">@Html.ValueFor(x => x.PageNameFromGetChildrenCall)</span>
}
@if (Model.ContentArea != null)
{
    @Html.PropertyFor(x => x.ContentArea)
}
<div id="html">
    @Html.PropertyFor(x => x.Html)
</div>
<div id="image">
    @Html.PropertyFor(x => x.Image)
</div>
</body>
</html>
